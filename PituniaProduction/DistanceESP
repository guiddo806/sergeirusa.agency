local function CreateDistanceLabelESP()
    local DistanceLabelESP = {}

    function DistanceLabelESP.CreateDistanceLabel(Player)
        local DistanceLabel = Drawing.new("Text")
        DistanceLabel.Visible = false
        DistanceLabel.Size = 14
        DistanceLabel.Color = Color3.fromRGB(128, 0, 128)
        DistanceLabel.Center = true
        DistanceLabel.Outline = false

        local Updater
        local function UpdateDistanceLabel()
            if Player and Player:IsA("Model") and Player:FindFirstChild("HumanoidRootPart") then
                local HumanoidRootPart = Player.HumanoidRootPart
                local Camera = workspace.CurrentCamera

                local Distance = (Camera.CFrame.p - HumanoidRootPart.Position).magnitude
                local DistanceText = string.format("[%d] m", math.floor(Distance))

                local Target2dPosition, IsVisible = Camera:WorldToViewportPoint(HumanoidRootPart.Position)
                
                -- Смещение позиции метки вниз относительно игрока
                local offsetY = 50 -- Вы можете настроить значение смещения
                DistanceLabel.Visible = IsVisible
                DistanceLabel.Position = Vector2.new(Target2dPosition.X, Target2dPosition.Y + offsetY)
                DistanceLabel.Text = DistanceText
            else
                DistanceLabel.Visible = false
                if not Player then
                    DistanceLabel:Remove()
                    Updater:Disconnect()
                end
            end
        end

        Updater = game:GetService("RunService").RenderStepped:Connect(UpdateDistanceLabel)
        return DistanceLabel
    end

    function DistanceLabelESP.EnableDistanceLabelESP()
        for _, Player in pairs(game:GetService("Workspace"):GetChildren()) do
            if Player:IsA("Model") and Player:FindFirstChild("HumanoidRootPart") then
                DistanceLabelESP.CreateDistanceLabel(Player)
            end
        end

        -- Обработка новых игроков
        game:GetService("Workspace").ChildAdded:Connect(function(Player)
            if Player:IsA("Model") and Player:FindFirstChild("HumanoidRootPart") then
                DistanceLabelESP.CreateDistanceLabel(Player)
            end
        end)
    end

    return DistanceLabelESP
end

local DistanceESP = CreateDistanceLabelESP()
DistanceESP.EnableDistanceLabelESP()
